{{range .Todos}}
    <li>
        <label>
            {{if .Done}}
                <input type="checkbox" checked="checked" hx-post="/api/todos/{{.Id}}"/>
            {{else}}
                <input type="checkbox" hx-post="/api/todos/{{.Id}}"/>
            {{end}}
            <span>{{.Title}}</span>
        </label>
    </li>
{{end}}
